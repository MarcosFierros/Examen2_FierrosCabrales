<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iteso.sesion9">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.iteso.sesion9.READ_DATABASE"
        android:label="Read Database"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>

        <activity
            android:name=".ActivityItem"
            android:label="New Item"></activity>
        <activity android:name=".ActivityPrivacyPolicy" />
        <activity android:name=".ActivityLogin" />
        <activity
            android:name=".ActivitySplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityProduct"></activity>

        <provider
            android:name=".database.ProductsProvider"
            android:authorities="com.iteso.sesion9"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.iteso.sesion9.READ_DATABASE"></provider>
    </application>




</manifest>